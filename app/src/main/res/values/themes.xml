<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Premium Wellness -->
    <style name="Base.Theme.TrackingCaloApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Branding Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorOnPrimaryContainer">@color/primary_dark</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary/Accent -->
        <item name="colorTertiary">@color/accent</item>
        <item name="colorTertiaryContainer">@color/accent_light</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>

        <!-- Ripple -->
        <item name="android:colorControlHighlight">@color/ripple_color</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TrackingCaloApp" parent="Base.Theme.TrackingCaloApp" />

    <!-- Custom Card Style -->
    <style name="Widget.TrackingCaloApp.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- Hero Card (for main calorie display) -->
    <style name="Widget.TrackingCaloApp.CardView.Hero" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <!-- Primary Button -->
    <style name="Widget.TrackingCaloApp.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <!-- Secondary Button -->
    <style name="Widget.TrackingCaloApp.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.TrackingCaloApp.Display">
        <item name="android:textSize">@dimen/text_size_calorie</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TrackingCaloApp.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TrackingCaloApp.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TrackingCaloApp.Body">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.TrackingCaloApp.Label">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!-- Tab Text Appearance -->
    <style name="TextAppearance.TrackingCaloApp.Tab" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.TrackingCaloApp.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_colors</item>
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.TrackingCaloApp.BottomNavigation.ActiveIndicator</item>
    </style>

    <style name="Widget.TrackingCaloApp.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_light</item>
    </style>
</resources>