<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".ui.onboarding.OnboardingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_xl"
        android:paddingTop="@dimen/spacing_3xl"
        android:paddingBottom="@dimen/spacing_xl">

        <!-- Welcome Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- App Icon Container -->
            <LinearLayout
                android:layout_width="@dimen/icon_container_xl"
                android:layout_height="@dimen/icon_container_xl"
                android:background="@drawable/bg_gradient_primary_circle"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/icon_xl"
                    android:layout_height="@dimen/icon_xl"
                    android:src="@drawable/ic_food"
                    app:tint="@color/white" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:text="@string/welcome"
                android:textAppearance="@style/TextAppearance.App.Headline.Medium"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:gravity="center"
                android:text="@string/onboarding_intro"
                android:textAppearance="@style/TextAppearance.App.Body.Medium"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Personal Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="@dimen/elevation_sm"
            app:strokeColor="@color/outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_profile"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Thông tin cá nhân"
                        android:textAppearance="@style/TextAppearance.App.Title.Medium"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_base"
                    android:hint="@string/name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Age Input -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:hint="@string/age"
                    app:suffixText="tuổi">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Gender Selection with Chips -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="@string/gender"
                    android:textAppearance="@style/TextAppearance.App.Label.Medium"
                    android:textColor="@color/text_secondary" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:orientation="horizontal">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/male"
                        android:textAppearance="@style/TextAppearance.App.Body.Medium" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/female"
                        android:textAppearance="@style/TextAppearance.App.Body.Medium" />

                </RadioGroup>

                <!-- Height & Weight Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:hint="@string/height"
                        app:suffixText="cm">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:hint="@string/weight"
                        app:suffixText="kg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Goals Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_base"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="@dimen/elevation_sm"
            app:strokeColor="@color/outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_diary"
                        app:tint="@color/secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Khả năng vận động"
                        android:textAppearance="@style/TextAppearance.App.Title.Medium"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Activity Level -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_base"
                    android:text="@string/activity_level"
                    android:textAppearance="@style/TextAppearance.App.Label.Medium"
                    android:textColor="@color/text_secondary" />

                <Spinner
                    android:id="@+id/spinnerActivityLevel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Target Weight Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_base"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="@dimen/elevation_sm"
            app:strokeColor="@color/outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_target"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="Mục tiêu cân nặng"
                        android:textAppearance="@style/TextAppearance.App.Title.Medium"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <!-- Current vs Target Weight Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_base"
                    android:orientation="horizontal">

                    <!-- Current Weight Display -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:background="@drawable/bg_stat_consumed"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hiện tại"
                            android:textAppearance="@style/TextAppearance.App.Label.Small"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvCurrentWeightDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:fontFamily="sans-serif-medium"
                            android:text="-- kg"
                            android:textColor="@color/calories_consumed"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Arrow -->
                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/text_hint" />

                    <!-- Target Weight Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:hint="Mục tiêu"
                        app:suffixText="kg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTargetWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Weekly Rate Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="Tốc độ thay đổi mỗi tuần"
                    android:textAppearance="@style/TextAppearance.App.Label.Medium"
                    android:textColor="@color/text_secondary" />

                <!-- Weekly Rate Chips -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupWeeklyRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRate025"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.25 kg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRate05"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="0.5 kg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRate075"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.75 kg" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRate1"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 kg" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Or Custom Duration -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="Hoặc nhập số tuần"
                    android:textAppearance="@style/TextAppearance.App.Label.Small"
                    android:textColor="@color/text_hint" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDuration"
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:hint="Số tuần"
                    app:suffixText="tuần">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Calculated Info Preview -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTargetInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/primary_container"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardElevation="@dimen/elevation_none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <!-- Duration & Target Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thời gian"
                                    android:textAppearance="@style/TextAppearance.App.Label.Small"
                                    android:textColor="@color/on_primary_container" />

                                <TextView
                                    android:id="@+id/tvCalculatedDuration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="-- tuần"
                                    android:textColor="@color/on_primary_container"
                                    android:textSize="@dimen/text_size_medium" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ngày đạt mục tiêu"
                                    android:textAppearance="@style/TextAppearance.App.Label.Small"
                                    android:textColor="@color/on_primary_container" />

                                <TextView
                                    android:id="@+id/tvTargetDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="--/--/----"
                                    android:textColor="@color/on_primary_container"
                                    android:textSize="@dimen/text_size_medium" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Safety Warning -->
                        <TextView
                            android:id="@+id/tvSafetyWarning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:text="✓ Tốc độ an toàn"
                            android:textAppearance="@style/TextAppearance.App.Label.Small"
                            android:textColor="@color/on_primary_container" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Skip Target Weight Option -->
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbSkipTargetWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="Bỏ qua, dùng mục tiêu đơn giản (±500 cal)"
                    android:textAppearance="@style/TextAppearance.App.Body.Small"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Calculated Goal Display -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_base"
            app:cardBackgroundColor="@color/primary_container"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="@dimen/elevation_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mục tiêu calo hàng ngày"
                    android:textAppearance="@style/TextAppearance.App.Label.Large"
                    android:textColor="@color/on_primary_container" />

                <TextView
                    android:id="@+id/tvCalculatedGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:fontFamily="sans-serif-medium"
                    android:text="2000"
                    android:textColor="@color/on_primary_container"
                    android:textSize="@dimen/text_size_calorie"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cal/ngày"
                    android:textAppearance="@style/TextAppearance.App.Body.Medium"
                    android:textColor="@color/on_primary_container" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Finish Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinish"
            style="@style/Widget.App.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_lg"
            android:layout_marginTop="@dimen/spacing_xl"
            android:text="@string/finish"
            app:icon="@drawable/ic_chevron_right"
            app:iconGravity="end" />

    </LinearLayout>

</ScrollView>
