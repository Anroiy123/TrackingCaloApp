<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.addworkout.AddWorkoutActivity">

    <!-- Modern AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="@dimen/elevation_none">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.App.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_close"
            app:navigationIconTint="@color/text_primary"
            app:title="@string/add_workout"
            app:titleTextAppearance="@style/TextAppearance.App.Title.Large"
            app:titleTextColor="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Search Bar - Modern Style -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_base"
            android:layout_marginTop="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/surface_container"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardElevation="@dimen/elevation_none"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_base"
                android:paddingVertical="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:src="@drawable/ic_search"
                    app:tint="@color/text_tertiary" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/search_workout"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.App.Body.Large"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_tertiary" />

                <ImageView
                    android:id="@+id/ivClearSearch"
                    android:layout_width="@dimen/icon_md"
                    android:layout_height="@dimen/icon_md"
                    android:padding="@dimen/spacing_xs"
                    android:src="@drawable/ic_close"
                    android:visibility="gone"
                    app:tint="@color/text_tertiary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Category Selection Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_base"
            android:layout_marginTop="@dimen/spacing_base"
            android:text="Loại bài tập"
            android:textAppearance="@style/TextAppearance.App.Label.Large"
            android:textColor="@color/text_secondary" />

        <!-- Category Chips - Modern Style -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/spacing_base"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Tất cả"
                    app:chipBackgroundColor="@color/chip_background_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCardio"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cardio"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipIcon="@drawable/ic_workout"
                    app:chipIconTint="@color/cardio" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStrength"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/strength"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipIcon="@drawable/ic_workout"
                    app:chipIconTint="@color/strength" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFlexibility"
                    style="@style/Widget.App.Chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flexibility"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipIcon="@drawable/ic_workout"
                    app:chipIconTint="@color/flexibility" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_base"
            android:layout_marginTop="@dimen/spacing_base"
            android:background="@color/outline" />

        <!-- Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_base"
            android:paddingVertical="@dimen/spacing_md">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Danh sách bài tập"
                android:textAppearance="@style/TextAppearance.App.Title.Medium"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvWorkoutCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 bài tập"
                android:textAppearance="@style/TextAppearance.App.Label.Medium"
                android:textColor="@color/text_tertiary" />

        </LinearLayout>

        <!-- Workout List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWorkouts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/spacing_base"
            android:paddingBottom="@dimen/spacing_4xl" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xl"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/icon_2xl"
                android:layout_height="@dimen/icon_2xl"
                android:alpha="0.5"
                android:src="@drawable/ic_workout"
                app:tint="@color/text_hint" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:gravity="center"
                android:text="Không tìm thấy bài tập"
                android:textAppearance="@style/TextAppearance.App.Body.Large"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:gravity="center"
                android:text="Thử tìm kiếm với từ khóa khác"
                android:textAppearance="@style/TextAppearance.App.Body.Small"
                android:textColor="@color/text_tertiary" />

        </LinearLayout>

    </LinearLayout>

    <!-- FAB để thêm bài tập tùy chỉnh -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddCustomWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_base"
        android:contentDescription="Thêm bài tập mới"
        app:backgroundTint="@color/calories_burned"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
