<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/radius_base"
    app:cardElevation="@dimen/elevation_none"
    app:rippleColor="@color/secondary_container"
    app:strokeColor="@color/outline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_base">

        <!-- Category Indicator Circle -->
        <LinearLayout
            android:id="@+id/layoutCategoryIcon"
            android:layout_width="@dimen/icon_container_md"
            android:layout_height="@dimen/icon_container_md"
            android:background="@drawable/bg_workout_indicator"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivCategoryIcon"
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_workout"
                app:tint="@color/cardio" />

        </LinearLayout>

        <!-- Workout Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWorkoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Chạy bộ"
                android:textAppearance="@style/TextAppearance.App.Title.Small"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxs"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 phút"
                    android:textAppearance="@style/TextAppearance.App.Body.Small"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_sm"
                    android:text="•"
                    android:textColor="@color/text_hint" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCategory"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/chip_height_sm"
                    android:text="Cardio"
                    android:textAppearance="@style/TextAppearance.App.Label.Small"
                    android:textColor="@color/cardio"
                    app:chipBackgroundColor="@color/cardio_container"
                    app:chipMinHeight="@dimen/chip_height_sm"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStrokeWidth="0dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Calories Burned & Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_calorie_badge_burned"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_md"
                android:paddingVertical="@dimen/spacing_xs">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/calories_burned"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCaloriesBurned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="300"
                    android:textColor="@color/calories_burned"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xxs"
                    android:text="cal"
                    android:textAppearance="@style/TextAppearance.App.Label.Small"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="18:00"
                android:textAppearance="@style/TextAppearance.App.Label.Small"
                android:textColor="@color/text_tertiary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
