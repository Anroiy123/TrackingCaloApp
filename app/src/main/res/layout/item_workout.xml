<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium">

        <!-- Category Indicator -->
        <View
            android:id="@+id/viewCategoryIndicator"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:background="@color/workout_cardio" />

        <!-- Workout Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWorkoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chạy bộ"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWorkoutInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 cal/phút • Cardio"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <!-- Calories per unit -->
        <TextView
            android:id="@+id/tvCaloriesPerUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 cal/phút"
            android:textColor="@color/calories_burned"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

