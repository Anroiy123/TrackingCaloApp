<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_large"
        android:paddingTop="@dimen/padding_xlarge"
        android:paddingBottom="@dimen/padding_large">

        <!-- Greeting Header with date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_large">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chÃ o! ðŸ‘‹"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_medium"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tiny"
                android:text="@string/today"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- HERO Card - Calorie Overview with Gradient -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius_large"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_warm"
                android:padding="@dimen/card_padding_large">

                <!-- NET Calories - Hero Display -->
                <LinearLayout
                    android:id="@+id/heroCalorieSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvNetCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_calorie"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_tiny"
                        android:text="@string/calories_net"
                        android:textColor="#B3FFFFFF"
                        android:textSize="@dimen/text_size_medium"
                        android:textAllCaps="true"
                        android:letterSpacing="0.15" />

                </LinearLayout>

                <!-- Progress Ring Background -->
                <ProgressBar
                    android:id="@+id/progressCalories"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/progress_height_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_bar_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/heroCalorieSection" />

                <!-- Goal Info -->
                <TextView
                    android:id="@+id/tvGoalInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="Má»¥c tiÃªu: 2000 cal"
                    android:textColor="#B3FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progressCalories" />

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintTop_toBottomOf="@id/tvGoalInfo">

                    <!-- Consumed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCaloriesConsumed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calories_consumed"
                            android:textColor="#99FFFFFF"
                            android:textSize="@dimen/text_size_tiny"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />
                    </LinearLayout>

                    <!-- Vertical Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#33FFFFFF" />

                    <!-- Burned -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCaloriesBurned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calories_burned"
                            android:textColor="#99FFFFFF"
                            android:textSize="@dimen/text_size_tiny"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />
                    </LinearLayout>

                    <!-- Vertical Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#33FFFFFF" />

                    <!-- Remaining -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCaloriesRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calories_remaining"
                            android:textColor="#99FFFFFF"
                            android:textSize="@dimen/text_size_tiny"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions - Floating Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddFood"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/add_food"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:backgroundTint="@color/primary"
                app:cornerRadius="@dimen/button_corner_radius"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddWorkout"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/add_workout"
                android:textColor="@color/secondary"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:cornerRadius="@dimen/button_corner_radius"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconTint="@color/secondary"
                app:strokeColor="@color/secondary"
                app:strokeWidth="2dp" />

        </LinearLayout>

        <!-- Nutrition Card - Macros -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinh dÆ°á»¡ng"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Protein -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_dot_protein" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:text="@string/protein_label"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tvProteinProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g / 0g"
                            android:textColor="@color/protein"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressProtein"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/progress_height_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_protein" />
                </LinearLayout>

                <!-- Carbs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_dot_carbs" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:text="@string/carbs_label"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tvCarbsProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g / 0g"
                            android:textColor="@color/carbs"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressCarbs"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/progress_height_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_carbs" />
                </LinearLayout>

                <!-- Fat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_dot_fat" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_small"
                            android:layout_weight="1"
                            android:text="@string/fat_label"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tvFatProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g / 0g"
                            android:textColor="@color/fat"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressFat"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/progress_height_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_fat" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Activities Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoáº¡t Ä‘á»™ng gáº§n Ä‘Ã¢y"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentActivities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false" />

                <TextView
                    android:id="@+id/tvNoActivities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="@string/no_entries"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

