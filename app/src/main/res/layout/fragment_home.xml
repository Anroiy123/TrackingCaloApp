<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_base"
        android:paddingTop="@dimen/spacing_base"
        android:paddingBottom="@dimen/spacing_xl">

        <!-- Header vá»›i greeting vÃ  ngÃ y -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_sm">

            <TextView
                android:id="@+id/tvGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chÃ o! ðŸ‘‹"
                android:textAppearance="@style/TextAppearance.App.Headline.Small"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/today"
                android:textAppearance="@style/TextAppearance.App.Body.Medium"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Card Tá»•ng quan Calo - Hero Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_base"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="@dimen/elevation_sm"
            app:strokeColor="@color/outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Calo NET - Hero Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stat_net"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calories_net"
                        android:textAppearance="@style/TextAppearance.App.Label.Medium"
                        android:textColor="@color/calories_net" />

                    <TextView
                        android:id="@+id/tvNetCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textColor="@color/calories_net"
                        android:textSize="@dimen/text_size_calorie"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kcal"
                        android:textAppearance="@style/TextAppearance.App.Body.Small"
                        android:textColor="@color/text_tertiary" />

                </LinearLayout>

                <!-- Progress Bar vá»›i label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiáº¿n Ä‘á»™ hÃ´m nay"
                            android:textAppearance="@style/TextAppearance.App.Label.Medium"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textAppearance="@style/TextAppearance.App.Label.Large"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressCalories"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/calorie_progress_height"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_bar_horizontal" />

                    <TextView
                        android:id="@+id/tvGoalInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="Má»¥c tiÃªu: 2000 cal"
                        android:textAppearance="@style/TextAppearance.App.Body.Small"
                        android:textColor="@color/text_tertiary" />

                </LinearLayout>

                <!-- Stats Row vá»›i background colors -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:orientation="horizontal">

                    <!-- Ä‚n vÃ o -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:background="@drawable/bg_stat_consumed"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:src="@drawable/ic_food"
                            app:tint="@color/calories_consumed" />

                        <TextView
                            android:id="@+id/tvCaloriesConsumed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:fontFamily="sans-serif-medium"
                            android:text="0"
                            android:textColor="@color/calories_consumed"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calories_consumed"
                            android:textAppearance="@style/TextAppearance.App.Label.Small"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Äá»‘t chÃ¡y -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_xs"
                        android:layout_weight="1"
                        android:background="@drawable/bg_stat_burned"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:src="@drawable/ic_workout"
                            app:tint="@color/calories_burned" />

                        <TextView
                            android:id="@+id/tvCaloriesBurned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:fontFamily="sans-serif-medium"
                            android:text="0"
                            android:textColor="@color/calories_burned"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calories_burned"
                            android:textAppearance="@style/TextAppearance.App.Label.Small"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- CÃ²n láº¡i -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:background="@drawable/bg_stat_remaining"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:src="@drawable/ic_time"
                            app:tint="@color/calories_remaining" />

                        <TextView
                            android:id="@+id/tvCaloriesRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:fontFamily="sans-serif-medium"
                            android:text="2000"
                            android:textColor="@color/calories_remaining"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calories_remaining"
                            android:textAppearance="@style/TextAppearance.App.Label.Small"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions - ThÃªm thá»±c pháº©m & ThÃªm bÃ i táº­p -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_base"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddFood"
                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_lg"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:layout_weight="1"
                android:text="@string/add_food"
                app:icon="@drawable/ic_food"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_sm" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddWorkout"
                style="@style/Widget.App.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_lg"
                android:layout_marginStart="@dimen/spacing_sm"
                android:layout_weight="1"
                android:text="@string/add_workout"
                app:icon="@drawable/ic_workout"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/spacing_sm"
                app:strokeColor="@color/calories_burned" />

        </LinearLayout>

        <!-- Card Hoáº¡t Ä‘á»™ng gáº§n Ä‘Ã¢y -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_base"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="@dimen/elevation_sm"
            app:strokeColor="@color/outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_base">

                <!-- Header vá»›i icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@drawable/ic_time"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:text="Hoáº¡t Ä‘á»™ng gáº§n Ä‘Ã¢y"
                        android:textAppearance="@style/TextAppearance.App.Title.Medium"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/spacing_sm"
                        android:text="Xem táº¥t cáº£"
                        android:textAppearance="@style/TextAppearance.App.Label.Medium"
                        android:textColor="@color/primary" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:background="@color/outline" />

                <!-- RecyclerView cho activities -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentActivities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/layoutNoActivities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_xl"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/icon_2xl"
                        android:layout_height="@dimen/icon_2xl"
                        android:alpha="0.5"
                        android:src="@drawable/ic_diary"
                        app:tint="@color/text_hint" />

                    <TextView
                        android:id="@+id/tvNoActivities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:gravity="center"
                        android:text="@string/no_entries"
                        android:textAppearance="@style/TextAppearance.App.Body.Medium"
                        android:textColor="@color/text_hint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:gravity="center"
                        android:text="HÃ£y thÃªm bá»¯a Äƒn hoáº·c bÃ i táº­p Ä‘áº§u tiÃªn"
                        android:textAppearance="@style/TextAppearance.App.Body.Small"
                        android:textColor="@color/text_tertiary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
