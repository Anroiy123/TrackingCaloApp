<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_md">

    <!-- Type Indicator Circle -->
    <LinearLayout
        android:id="@+id/layoutTypeIcon"
        android:layout_width="@dimen/icon_container_sm"
        android:layout_height="@dimen/icon_container_sm"
        android:background="@drawable/bg_stat_consumed"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivTypeIcon"
            android:layout_width="@dimen/icon_sm"
            android:layout_height="@dimen/icon_sm"
            android:src="@drawable/ic_food"
            app:tint="@color/calories_consumed" />

    </LinearLayout>

    <!-- Activity Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvActivityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Phở bò"
            android:textAppearance="@style/TextAppearance.App.Body.Medium"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvActivityInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:text="Bữa sáng • 08:30"
            android:textAppearance="@style/TextAppearance.App.Body.Small"
            android:textColor="@color/text_tertiary" />

    </LinearLayout>

    <!-- Calories Badge -->
    <TextView
        android:id="@+id/tvCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_calorie_badge_consumed"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="@dimen/spacing_md"
        android:paddingVertical="@dimen/spacing_xs"
        android:text="+450 cal"
        android:textColor="@color/calories_consumed"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />

</LinearLayout>
